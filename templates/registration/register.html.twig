{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}


{% block body %}

	<section class="container">
		<div class="row">
			<div class="col">
				{% for flash_error in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}

				<h1>Inscription</h1>

				{{ form_start(registrationForm) }}
				<fieldset class="mb-3">
					<legend>Mon identit√©</legend>
					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
				</fieldset>

				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-primary btn-lg my-3">S'inscrire</button>
				<a href="{{ path('app_login') }}" class="btn btn-secondary btn-lg my-3">Se connecter</a>


				{{ form_end(registrationForm) }}

			</div>
		</div>
	</section>

{% endblock %}
